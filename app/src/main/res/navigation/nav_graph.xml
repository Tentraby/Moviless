<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.testandroid.ui.popular.PopularFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_popular" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_homeTopRated"
            app:destination="@id/homeTopRated" />
        <action
            android:id="@+id/action_homeFragment_to_homeUpcoming"
            app:destination="@id/homeUpcoming" />
    </fragment>
    <fragment
        android:id="@+id/homeTopRated"
        android:name="com.example.testandroid.ui.viewest.ViewestFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_viewest" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_homeTopRated_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_homeTopRated_to_homeUpcoming"
            app:destination="@id/homeUpcoming" />
    </fragment>
    <fragment
        android:id="@+id/homeUpcoming"
        android:name="com.example.testandroid.ui.upcoming.UpcomingFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_upcoming" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_homeUpcoming_to_homeTopRated"
            app:destination="@id/homeTopRated" />
        <action
            android:id="@+id/action_homeUpcoming_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.testandroid.ui.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="movie"
            app:argType="com.example.testandroid.data.entities.MovieEntity" />
        <action
            android:id="@+id/action_detailFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_detailFragment_to_homeTopRated"
            app:destination="@id/homeTopRated" />
        <action
            android:id="@+id/action_detailFragment_to_homeUpcoming"
            app:destination="@id/homeUpcoming" />
    </fragment>
</navigation>